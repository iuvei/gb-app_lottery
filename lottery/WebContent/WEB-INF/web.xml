<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         id="WebApp_ID" version="3.0" metadata-complete="true">

    <display-name>lottery</display-name>

    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>
            classpath*:conf/lottery-appCtx.xml
        </param-value>
    </context-param>

    <listener>
        <listener-class>so.wwb.gamebox.lottery.init.CtxLoaderListener</listener-class>
    </listener>

    <listener>
        <listener-class>org.soul.web.init.RequestContextListener</listener-class>
    </listener>
    <!--HealthCheck  开始-->
    <filter>
        <filter-name>healthCheckFilter</filter-name>
        <filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
        <async-supported>true</async-supported>
    </filter>

    <filter-mapping>
        <filter-name>healthCheckFilter</filter-name>
        <url-pattern>/health/check.html</url-pattern>
    </filter-mapping>
    <!--HealthCheck  结束-->
    <filter>
        <filter-name>dubboClientFilter</filter-name>
        <filter-class>org.soul.web.filter.DubboClientFilter</filter-class>
        <async-supported>true</async-supported>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
        <init-param>
            <param-name>forceEncoding</param-name>
            <param-value>true</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>dubboClientFilter</filter-name>
        <url-pattern>/destroy/serviceStop</url-pattern>
    </filter-mapping>

    <!--文件后缀过滤-->
    <filter>
        <filter-name>fileSuffixFilter</filter-name>
        <filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
        <async-supported>true</async-supported>
    </filter>
    <filter-mapping>
        <filter-name>fileSuffixFilter</filter-name>
        <url-pattern>*</url-pattern>
    </filter-mapping>
    <!--文件后缀过滤-->
    <!--编码-->
    <filter>
        <filter-name>characterEncodingFilter</filter-name>
        <filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
        <async-supported>true</async-supported>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
        <init-param>
            <param-name>forceEncoding</param-name>
            <param-value>true</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>characterEncodingFilter</filter-name>
        <url-pattern>*.html</url-pattern>
    </filter-mapping>
    <!--编码-->
    <!--彩票登录过滤-->
    <filter>
        <filter-name>ltLocalLoginFilter</filter-name>
        <filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
        <async-supported>true</async-supported>
    </filter>
    <filter-mapping>
        <filter-name>ltLocalLoginFilter</filter-name>
        <url-pattern>*.html</url-pattern>
    </filter-mapping>
    <!--彩票登录过滤-->
    <!--会话过滤-->
    <filter>
        <filter-name>sessionFilter</filter-name>
        <filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
        <async-supported>true</async-supported>
    </filter>
    <filter-mapping>
        <filter-name>sessionFilter</filter-name>
        <url-pattern>/mobile/message_en_US.js</url-pattern>
        <url-pattern>/mobile/message_zh_CN.js</url-pattern>
        <url-pattern>/mobile/message_zh_TW.js</url-pattern>
        <url-pattern>/mobile/message_ja_JP.js</url-pattern>
        <url-pattern>*.html</url-pattern>
    </filter-mapping>
    <!--会话过滤-->
    <!--彩票站点过滤-->
    <filter>
        <filter-name>lotteryFilter</filter-name>
        <filter-class>so.wwb.gamebox.web.filter.LotteryFilter</filter-class>
        <async-supported>true</async-supported>
    </filter>
    <filter-mapping>
        <filter-name>lotteryFilter</filter-name>
        <url-pattern>/</url-pattern>
        <url-pattern>*.html</url-pattern>
    </filter-mapping>
    <!--彩票站点过滤-->

    <!--pageCache filter begin-->
    <!--<filter>
        <filter-name>pageCache</filter-name>
        <filter-class>org.soul.web.filter.PageCacheFilter</filter-class>
        <async-supported>true</async-supported>
    </filter>
    <filter-mapping>
        <filter-name>pageCache</filter-name>
        <url-pattern>*.html</url-pattern>
    </filter-mapping>-->
    <!--pageCache filter end-->
    <!--非法字符:begin-->
    <filter>
        <filter-name>illegalCharacterFilter</filter-name>
        <filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
        <async-supported>true</async-supported>
    </filter>
    <filter-mapping>
        <filter-name>illegalCharacterFilter</filter-name>
        <url-pattern>*.html</url-pattern>
    </filter-mapping>
    <!--非法字符:end-->
    <!--非法单词:begin-->
    <filter>
        <filter-name>illegalWordFilter</filter-name>
        <filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
        <async-supported>true</async-supported>
    </filter>
    <filter-mapping>
        <filter-name>illegalWordFilter</filter-name>
        <url-pattern>*.html</url-pattern>
    </filter-mapping>
    <!--非法单词:end-->
    <!--shiro filter begin-->
    <filter>
        <filter-name>shiroFilter</filter-name>
        <filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
        <async-supported>true</async-supported>
    </filter>
    <filter-mapping>
        <filter-name>shiroFilter</filter-name>
        <url-pattern>*.html</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>
    <!--shiro filter end-->
    <!--Ip过滤-->
    <!--<filter>-->
        <!--<filter-name>ltIpFilter</filter-name>-->
        <!--<filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>-->
        <!--<async-supported>true</async-supported>-->
    <!--</filter>-->
    <!--<filter-mapping>-->
        <!--<filter-name>ltIpFilter</filter-name>-->
        <!--<url-pattern>*.html</url-pattern>-->
    <!--</filter-mapping>-->
    <!--Ip过滤-->
    <!--域名过滤-->
    <!--<filter>
        <filter-name>accessFilter</filter-name>
        <filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
        <async-supported>true</async-supported>
    </filter>
    <filter-mapping>
        <filter-name>accessFilter</filter-name>
        <url-pattern>*.html</url-pattern>
    </filter-mapping>-->
    <!--域名过滤-->
    <!--多语言资源过滤-->
    <filter>
        <filter-name>messageFilter</filter-name>
        <filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
        <async-supported>true</async-supported>
    </filter>
    <filter-mapping>
        <filter-name>messageFilter</filter-name>
        <url-pattern>/message_en_US.js</url-pattern>
        <url-pattern>/message_zh_CN.js</url-pattern>
        <url-pattern>/message_zh_TW.js</url-pattern>
        <url-pattern>/message_ja_JP.js</url-pattern>
    </filter-mapping>
    <!--多语言资源过滤-->
    <!--用户在线时长过滤-->
    <filter>
        <filter-name>localeFilter</filter-name>
        <filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
        <async-supported>true</async-supported>
    </filter>
    <filter-mapping>
        <filter-name>localeFilter</filter-name>
        <url-pattern>*.html</url-pattern>
    </filter-mapping>
    <!--用户在线时长过滤-->
    <!--安全密码:begin-->
    <filter>
        <filter-name>PrivilegeFilter</filter-name>
        <filter-class>so.wwb.gamebox.web.filter.PrivilegeFilter</filter-class>
        <async-supported>true</async-supported>
    </filter>
    <filter-mapping>
        <filter-name>PrivilegeFilter</filter-name>
        <url-pattern>*.html</url-pattern>
    </filter-mapping>
    <!--安全密码:end-->
    <servlet>
        <servlet-name>dispatchServlet</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <init-param>
            <param-name>dispatchOptionsRequest</param-name>
            <param-value>true</param-value>
        </init-param>
        <init-param>
            <param-name>contextConfigLocation</param-name>
            <param-value>classpath*:conf/mvc.xml</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>dispatchServlet</servlet-name>
        <url-pattern>*.html</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/errors/index.html</location>
    </error-page>
</web-app>
